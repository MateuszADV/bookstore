<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
	<tr>
      <th>Tytuł</th>
      <th>Ilość stron</th>
      <th>Rok wydania</th>
      <th>Opis</th>
      <!-- <th> colspan="3"></th> -->
      <th></th>
    </tr>
  </thead>
  <% @author.books.each do |book| %>
  	<tr>
  		<td><%= book.title %></td>
  		<td><%= book.pages %></td>
  		<td><%= book.year %></td>
  		<td><%= book.body %></td>
      <td><%= link_to book.id, books_edit_path(@book) %></td>
  	</tr>
  	<% end %>
</table>