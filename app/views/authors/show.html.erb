<div class="jumbotron">
  <h1 class="display-4"><%= @author.name + ' ' + @author.last_name %></h1>
  <hr class="my-4">
  <p>
  	<strong>Wiek</strong>
  	<%= @author.century %>
  </p>
  <p>
  	<strong>Opis</strong>
  	<%= @author.body %>
  </p>
  <%= link_to 'Edit', edit_author_path(@author), class:"btn btn-secondary" %> 
  <%= link_to 'Back', authors_path, class:"btn btn-dark" %>
  <!-- <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a> -->
</div>

<h2>książki</h2>
 <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
	<tr>
      <th>Tytuł</th>
      <th>Ilość stron</th>
      <th>Rok wydania</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @author.books.each do |book| %>
  	<tr>
  		<td><%= book.title %></td>
  		<td><%= book.pages %></td>
  		<td><%= book.year %></td>
  		<td><%= book.body %></td>
      <td><%= link_to 'Show', author_book_path(book) %></td>
      <td><%= link_to 'Edit', edit_author_book_path(book) %></td>
  	</tr>
  	<% end %>
</table>


<h2>Dodaj książke</h2>
 <%= render'books/form' %> 


